<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#50008B8B">


    <CheckBox
        android:id="@+id/cbBox"
        android:layout_width="wrap_content"
        android:layout_height="50dp"></CheckBox>

    <TextView
        android:id="@+id/tvDescr"
        android:layout_width="185dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:text=""
        android:textSize="24sp"></TextView>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="20dp"
            android:baselineAligned="true"
            android:gravity="bottom|center"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#3F51B5"
            app:autoSizeTextType="none"></TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/editImage"
        style="?android:borderlessButtonStyle"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_edit"></ImageView>

    <ImageView
        android:id="@+id/deleteImage"
        style="?android:borderlessButtonStyle"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:src="@drawable/icons_delete"
        android:textSize="30sp"></ImageView>
</LinearLayout>

